plugin.tx_t3extblog {
	view {
		# cat=plugin.tx_t3extblog/file; type=string; label=Path to a custom template root
		templateRootPath =

		# cat=plugin.tx_t3extblog/file; type=string; label=Path to a custom  template partials
		partialRootPath =

		# cat=plugin.tx_t3extblog/file; type=string; label=Path to a custom  template layouts
		layoutRootPath =
	}

	persistence {
		# cat=plugin.tx_t3extblog/persistence/1; type=string; label=Default storage PID: Page or Sysfolder containing your blog records
		storagePid =
	}

	settings {
		# cat=plugin.tx_t3extblog/basic/1; type=string; label=Blogname: Used within email and RSS templates
		blogName = Testblog

		# cat=plugin.tx_t3extblog/pid/1; type=int+; label=Blogsystem Plugin PID: Page containing the Blogsystem plugin
		blogsystem.pid =
		# cat=plugin.tx_t3extblog/pid/3; type=int+; label=Subscription Manager Plugin PID: Page containing the Subscription Manager plugin
		subscriptionManager.pid =

		## The following constants are shortcuts and DO NOT MATCH any TS setup

		# cat=plugin.tx_t3extblog/email/1; type=string; label=Sender address: All emails are sent from this address
		emailFrom =
		# cat=plugin.tx_t3extblog/email/2; type=string; label=Admin notification: Email address for sending admin notifications
		emailTo =

		previewImage {
			# cat=plugin.tx_t3extblog/preview/image/1; type=string; label=Preview image width: Width of the preview image
			width = 960c
			# cat=plugin.tx_t3extblog/preview/image/2; type=string; label=Preview image height: Height of the preview image
			height = 540c
		}

		privacyPolicy {
			# cat=plugin.tx_t3extblog/privacy/1; type=boolean; label=Enable the privacyPolicy checkbox
			enabled = 0
			# cat=plugin.tx_t3extblog/privacy/2; type=string; label=Typolink that links to the privacy policy page
			typolink =
		}

		# cat=plugin.tx_t3extblog/pid/4; type=int+; label=SPAM check redirect PID: Target when redirecting a client due to SPAM
		spamCheck.redirect.pid =
	}
